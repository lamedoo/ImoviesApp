<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding">

        <TextView
            android:id="@+id/main_new_movies_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ახალი ფილმები"
            android:fontFamily="@font/georgian_uppercase"
            android:textSize="18sp"
            android:textColor="?colorOnPrimary"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_new_movies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/main_new_movies_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:spanCount="2" />

        <TextView
            android:id="@+id/main_new_tvshows_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="ახალი სერიალები"
            android:fontFamily="@font/georgian_uppercase"
            android:textSize="18sp"
            android:textColor="?colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@id/rv_main_new_movies"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_new_tvshows"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/main_new_tvshows_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:spanCount="2" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>