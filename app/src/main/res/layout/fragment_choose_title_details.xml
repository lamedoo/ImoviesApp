<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:padding="@dimen/fragment_padding"
    tools:context=".ui.singletitle.choosetitledetails.ChooseTitleDetailsFragment">

    <TextView
        android:id="@+id/movie_file_not_yet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:text="ფილმი/სერიალი მალე დაემატება"
        android:textSize="30sp"
        android:fontFamily="@font/georgian_uppercase"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/movie_files_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_language_title"
            android:layout_width="wrap_content"
            app:layout_goneMarginTop="30dp"
            android:text="ენა"
            android:textColor="?colorOnPrimary"
            android:layout_marginTop="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:spinnerMode="dialog"
            app:layout_constraintStart_toEndOf="@id/tv_language_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_season_title"
            android:layout_width="wrap_content"
            android:text="სეზონი"
            android:textColor="?colorOnPrimary"
            android:layout_marginTop="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_language_title"/>

        <Spinner
            android:id="@+id/spinner_season_numbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:spinnerMode="dialog"
            app:layout_constraintStart_toEndOf="@id/tv_season_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_language_title"/>

        <TextView
            android:id="@+id/tv_episode_title"
            android:layout_width="wrap_content"
            android:text="ეპიზოდი"
            android:textColor="?colorOnPrimary"
            android:layout_marginTop="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_season_title"/>

        <Spinner
            android:id="@+id/spinner_episode_numbers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:spinnerMode="dialog"
            app:layout_constraintStart_toEndOf="@id/tv_episode_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_season_title"/>

        <ImageView
            android:id="@+id/choose_movie_details_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_button"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_episode_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>