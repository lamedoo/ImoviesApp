<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding"
    tools:background="@color/default_background_color"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    tools:context=".ui.tv.details.chooseFiles.TvChooseFilesFragment">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5">

        <ImageView
            android:id="@+id/tv_files_title_poster"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/friends_poster" />

        <TextView
            android:id="@+id/tv_files_title_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:focusable="false"
            tools:text="2013"
            android:textColor="@color/green_dark"
            android:textStyle="bold"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/tv_files_title_poster"
            app:layout_constraintTop_toTopOf="@id/tv_files_title_poster" />

        <TextView
            android:id="@+id/tv_files_title_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:focusable="false"
            tools:text="2013"
            android:textColor="@color/green_dark"
            android:textStyle="bold"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/tv_files_title_year"
            app:layout_constraintTop_toTopOf="@id/tv_files_title_poster" />

        <ImageView
            android:id="@+id/tv_files_imdb_logo"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/imdb_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_files_title_imdb_score" />

        <TextView
            android:id="@+id/tv_files_title_imdb_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:focusable="false"
            tools:text="8.7"
            android:textStyle="bold"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_files_title_poster" />

        <TextView
            android:id="@+id/tv_files_title_name_eng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:focusable="false"
            tools:text="Friends"
            android:textStyle="bold"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/tv_files_title_poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_files_title_year" />

        <TextView
            android:id="@+id/tv_files_title_name_geo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:focusable="false"
            tools:text="მეგობრები"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/tv_files_title_poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_files_title_name_eng" />

        <TextView
            android:id="@+id/tv_files_title_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="false"
            tools:text="მეგობრები"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_files_title_poster" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/tv_no_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:text="ფილმი/სერიალი მალე დაემატება"
            android:textSize="25sp"
            android:fontFamily="@font/georgian_uppercase"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            tools:visibility="gone"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tv_right_container_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_language_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="ენა"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Spinner
                android:id="@+id/tv_files_spinner_language1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:focusedByDefault="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_language_title"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/tv_play_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_dark"
                android:text="ყურება"
                android:focusable="true"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_language_title" />

            <TextView
                android:id="@+id/tv_files_season_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="სეზონი"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_language_title"
                tools:layout_constraintTop_toBottomOf="@+id/tv_play_button1"/>

            <Spinner
                android:id="@+id/tv_files_spinner_season1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:spinnerMode="dialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_files_season_title1"
                app:layout_constraintTop_toBottomOf="@id/tv_language_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tv_files_episodes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:focusable="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tv_files_season_title1"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>