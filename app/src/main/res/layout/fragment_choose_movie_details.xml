<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding"
    tools:context=".ui.singlemovie.choosemoviedetails.ChooseMovieDetailsFragment">

    <TextView
        android:id="@+id/choose_movie_details_geo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="GEO"
        android:background="@color/default_background_color"
        android:padding="10dp"
        android:textColor="?colorOnPrimary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/choose_movie_details_eng"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/choose_movie_details_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/default_background_color"
        android:padding="10dp"
        android:text="ENG"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?colorOnPrimary"
        app:layout_constraintEnd_toStartOf="@+id/choose_movie_details_rus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/choose_movie_details_geo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choose_movie_details_rus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/default_background_color"
        android:padding="10dp"
        android:text="RUS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/choose_movie_details_eng"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>