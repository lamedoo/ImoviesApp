<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding"
    tools:background="@color/default_background_color"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    tools:context=".ui.tv.details.chooseFiles.TvChooseFilesFragment">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="percent">

        <TextView
            android:id="@+id/tv_files_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_remove_title_from_db"
            android:text="ტრეილერი"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableTop="@drawable/play_trailer" />

        <TextView
            android:id="@+id/tv_files_title_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/tv_remove_title_from_db"
            android:text="წაშლა"
            android:drawableTop="@drawable/remove_title_from_db"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_files_trailer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tv_files_poster_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_files_trailer">

            <ImageView
                android:id="@+id/tv_files_title_poster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:focusable="false"
                android:scaleType="centerCrop"
                tools:src="@drawable/friends_cover"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#AA000000"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_files_info_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@id/tv_files_title_name_eng"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/tv_files_score_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_files_year_container"
                    app:layout_constraintEnd_toStartOf="@+id/tv_files_year_container"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_files_year_container">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/phone_imdb_logo" />

                    <TextView
                        android:id="@+id/tv_files_title_imdb_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_data"
                        android:textStyle="bold"
                        tools:text="9.0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_files_year_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_files_duration_container"
                    app:layout_constraintEnd_toStartOf="@+id/tv_files_duration_container"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_files_score_container"
                    app:layout_constraintTop_toTopOf="@+id/tv_files_duration_container">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info_calendar_icon" />

                    <TextView
                        android:id="@+id/tv_files_title_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_data"
                        android:textStyle="bold"
                        tools:text="1987" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_files_duration_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_files_country_container"
                    app:layout_constraintEnd_toStartOf="@+id/tv_files_country_container"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_files_year_container"
                    app:layout_constraintTop_toTopOf="@+id/tv_files_country_container">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info_duration_icon" />

                    <TextView
                        android:id="@+id/tv_files_title_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_data"
                        android:textStyle="bold"
                        tools:text="99" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_files_country_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_files_duration_container"
                    app:layout_constraintTop_toBottomOf="@id/tv_files_duration_container"
                    app:layout_constraintTop_toTopOf="@+id/tv_files_duration_container">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info_country_icon" />

                    <TextView
                        android:id="@+id/tv_files_title_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_data"
                        android:textStyle="bold"
                        tools:text="USA" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_files_title_name_eng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:focusable="false"
                tools:text="Friends"
                android:textStyle="bold"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_files_title_name_geo"/>

            <TextView
                android:id="@+id/tv_files_title_name_geo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:focusable="false"
                tools:text="მეგობრები"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_files_title_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="false"
            tools:text="მეგობრები"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_files_poster_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>

