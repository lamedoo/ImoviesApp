<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clear_db_alert_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/clear_db_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ნამდვილად გსურთ განაგრძეთ ყურების წაშლა?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/clear_db_alert_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/clear_db_icon"
        app:layout_constraintTop_toBottomOf="@id/clear_db_alert_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/red"
        android:tint="@color/red"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/clear_db_alert_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp"
        android:text="არა"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="20dp"
        android:background="@drawable/alert_dialog_button_background"
        app:layout_constraintTop_toBottomOf="@id/clear_db_alert_icon"
        app:layout_constraintEnd_toStartOf="@id/clear_db_alert_yes"/>

    <TextView
        android:id="@+id/clear_db_alert_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp"
        android:text="დიახ"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="20dp"
        android:background="@drawable/alert_dialog_button_background"
        app:layout_constraintTop_toBottomOf="@id/clear_db_alert_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>