<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_sidebar_sidebar"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/secondary_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/fragment_padding"
    android:translationZ="1dp"
    android:visibility="gone"
    app:layout_constraintStart_toStartOf="parent"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tv_sidebar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rv_tv_default_card_view_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/georgian_uppercase"
        android:nextFocusUp="@id/tv_sidebar_search"
        android:nextFocusDown="@id/tv_sidebar_home"
        android:padding="5dp"
        android:text="ძიება"
        android:textColor="@color/text_on_accent_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_sidebar_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_sidebar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rv_tv_default_card_view_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/georgian_uppercase"
        android:padding="5dp"
        android:text="მთავარი"
        android:textColor="@color/text_on_accent_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_sidebar_movies"
        app:layout_constraintTop_toBottomOf="@+id/tv_sidebar_search"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_sidebar_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rv_tv_default_card_view_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/georgian_uppercase"
        android:padding="5dp"
        android:text="ტოპ ფილმები"
        android:textColor="@color/text_on_accent_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_sidebar_tvshows"
        app:layout_constraintTop_toBottomOf="@+id/tv_sidebar_home"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_sidebar_tvshows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rv_tv_default_card_view_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/georgian_uppercase"
        android:padding="5dp"
        android:text="ტოპ სერიალები"
        android:textColor="@color/text_on_accent_color"
        android:textStyle="bold"
        android:nextFocusDown="@id/tv_sidebar_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sidebar_movies"
        tools:layout_editor_absoluteX="25dp" />

    <TextView
        android:id="@+id/tv_sidebar_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rv_tv_default_card_view_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/georgian_uppercase"
        android:nextFocusUp="@id/tv_sidebar_tvshows"
        android:nextFocusDown="@id/tv_sidebar_settings"
        android:padding="5dp"
        android:text="პარამეტრები"
        android:textColor="@color/text_on_accent_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>