<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.singlemovie.SingleMovieFragment">

    <TextView
        android:id="@+id/tv_single_movie_title_geo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?colorOnPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ფილმის სახელი"/>

    <TextView
        android:id="@+id/tv_single_movie_title_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text_color"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintTop_toBottomOf="@id/tv_single_movie_title_geo"
        tools:text="Movie Title"/>

    <ImageView
        android:id="@+id/single_movie_imdb_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/imdb_logo"
        app:layout_constraintEnd_toStartOf="@id/tv_single_movie_imdb_score"
        app:layout_constraintTop_toBottomOf="@id/tv_single_movie_title_eng"
        app:layout_constraintBottom_toTopOf="@id/single_movie_play_container"/>

    <TextView
        android:id="@+id/tv_single_movie_imdb_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/georgian_uppercase"
        android:textColor="?colorOnPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_single_movie_title_eng"
        app:layout_constraintBottom_toTopOf="@id/single_movie_play_container"
        tools:text="9.0"/>

    <FrameLayout
        android:id="@+id/single_movie_play_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/single_movie_imdb_logo">

        <ImageView
            android:id="@+id/iv_single_movie_play"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@id/tv_single_movie_title_eng"/>

        <ImageView
            android:id="@+id/iv_post_video_icon"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="Video Image"
            android:src="@drawable/play_button" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/single_movie_play_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_single_movie_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/default_background_color"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Lorem Ipsum"/>

            <LinearLayout
                android:id="@+id/single_movie_year_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@color/default_background_color"
                app:layout_constraintTop_toBottomOf="@id/tv_single_movie_desc">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/georgian_uppercase"
                    android:text="გამოშვების წელი: "/>

                <TextView
                    android:id="@+id/tv_single_movie_year"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/georgian_uppercase"
                    android:layout_height="wrap_content"
                    tools:text="1987"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/single_movie_duration_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/default_background_color"
                app:layout_constraintTop_toBottomOf="@id/single_movie_year_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/georgian_uppercase"
                    android:text="ხანგრძლივობა: "/>

                <TextView
                    android:id="@+id/tv_single_movie_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/georgian_uppercase"
                    tools:text="99"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/single_movie_country_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/default_background_color"
                app:layout_constraintTop_toBottomOf="@id/single_movie_duration_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/georgian_uppercase"
                    android:text="ქვეყანა: "/>

                <TextView
                    android:id="@+id/tv_single_movie_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/georgian_uppercase"
                    tools:text="USA"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>